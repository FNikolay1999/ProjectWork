<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oldwordsmenu.OldWordsMenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background = "#cfdaec"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/dictionaryButton"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:backgroundTint = "#759cd8"
            android:text="Словарь"
            app:layout_constraintBottom_toTopOf="@+id/oldWordsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/oldWordsButton"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:backgroundTint = "#759cd8"
            android:text="Проверить изученные слова"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dictionaryButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>